# Application
APP_NAME=WebMagic
DEBUG=True
API_VERSION=v1
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:[password]@[host]/postgres
DATABASE_POOL_SIZE=5

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# External APIs
ANTHROPIC_API_KEY=your-anthropic-api-key
OUTSCRAPER_API_KEY=your-outscraper-api-key

# Email (AWS SES)
EMAIL_PROVIDER=ses
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
EMAIL_FROM=hugo@webmagic.com

# Email (SendGrid - Alternative)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Recurrente Payments
RECURRENTE_PUBLIC_KEY=your-recurrente-public-key
RECURRENTE_SECRET_KEY=your-recurrente-secret-key
RECURRENTE_WEBHOOK_SECRET=your-webhook-secret
RECURRENTE_BASE_URL=https://app.recurrente.com

# Site Hosting
SITES_DOMAIN=sites.webmagic.com
SITES_BASE_PATH=/var/www/sites

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
